@model ExpenseOnHotel2.Hotel

@{
    ViewBag.Title = "Create";
}

    <h2>Cadastro do Hotel</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @if (string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-success">
                        <strong>@ViewBag.Message</strong>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>@ViewBag.Error</strong>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <h4>Hotel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.HotelName, "Nome do Hotel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" required>
                @Html.EditorFor(model => model.HotelName, new { htmlAttributes = new { @class = "form-control", maxlength = 150, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelEvaluation, "Avaliação do Hotel (Estrelas)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelEvaluation, new { htmlAttributes = new { @class = "form-control", min = 1, max = 5, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelEvaluation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelDescription, "Breve descrição do Hotel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelDescription, new { htmlAttributes = new { @class = "form-control", maxlength = 300, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelAddress, "Endereço", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelAddress, new { htmlAttributes = new { @class = "form-control", maxlength = 80, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelComplement, "Complemento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelComplement, new { htmlAttributes = new { @class = "form-control", maxlength = 100, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelComplement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelCEP, "CEP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelCEP, new { htmlAttributes = new { @class = "form-control", maxlength = 8 } })
                @Html.ValidationMessageFor(model => model.HotelCEP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelCity, "Cidade", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelCity, new { htmlAttributes = new { @class = "form-control", maxlength = 100, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelCity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelState, "Estado (sigla)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelState, new { htmlAttributes = new { @class = "form-control", maxlength = 2, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelState, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotelAmenities, "Comodidades", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HotelAmenities, new { htmlAttributes = new { @class = "form-control", maxlength = 1000, required = "required" } })
                @Html.ValidationMessageFor(model => model.HotelAmenities, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Início", "Read")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
